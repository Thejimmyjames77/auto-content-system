// Daily Wellness Tracker - Physical & Spiritual Health

export interface WellnessItem {
  id: string;
  title: string;
  description: string;
  category: 'physical' | 'spiritual' | 'mental' | 'emotional';
  difficulty: 'easy' | 'medium' | 'hard';
  duration: string;
  benefits: string[];
}

export interface DailyProgress {
  date: string;
  completedItems: string[];
  streakDays: number;
  totalPoints: number;
}

