// Daily Suggestions
export function getDailySuggestion(): string {
  const suggestions = [
    'Start your day with intention - what do you want to cultivate today?',
    'Remember: Progress, not perfection. Every small step counts.',
    'Your body is a temple - treat it with love and respect.',
    'Take three deep breaths right now. Notice how you feel.',
    'Gratitude turns what we have into enough.',
    'You are exactly where you need to be on your journey.',
    'Self-care is not selfish - it is essential.',
    'Connect with nature today, even if just for 5 minutes.',
    'Your spiritual practice is a gift you give yourself.',
    'Celebrate how far you have come, not just how far you have to go.',
    'Today is a new opportunity to choose wellness.',
    'Listen to your body - it knows what it needs.',
  ];

  const today = new Date().getDate();
  return suggestions[today % suggestions.length];
}

// Get items by category
export function getItemsByCategory(category: WellnessItem['category']): WellnessItem[] {
  return wellnessActivities.filter(item => item.category === category);
}

// Calculate points
export function calculatePoints(completedItems: string[]): number {
  return completedItems.reduce((total, itemId) => {
    const item = wellnessActivities.find(w => w.id === itemId);
    if (!item) return total;

    const points = {
      easy: 10,
      medium: 20,
      hard: 30,
    };

    return total + points[item.difficulty];
  }, 0);
}
